<%# app/views/posts/index.html.erb %>

<div class="container mx-auto px-4 py-8">
  <!-- Header with Sync Button -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Bluesky Posts</h1>
      <% if @last_sync %>
        <p class="text-sm text-gray-600 mt-1">
          Last synced: <%= time_ago_in_words(@last_sync) %> ago
        </p>
      <% else %>
        <p class="text-sm text-gray-600 mt-1">
          Never synced
        </p>
      <% end %>
    </div>

    <%= button_to sync_posts_path, method: :post, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-200 flex items-center gap-2", data: { turbo: false } do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
      </svg>
      Sync Now
    <% end %>
  </div>

  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6" role="alert">
      <p><%= notice %></p>
    </div>
  <% end %>

  <% if alert %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6" role="alert">
      <p><%= alert %></p>
    </div>
  <% end %>

  <!-- Search and Filter Form -->
  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <%= form_with url: posts_path, method: :get, class: "space-y-4", data: { turbo_frame: "posts_table" } do |f| %>
      <!-- Search Bar -->
      <div>
        <label for="search" class="block text-sm font-medium text-gray-700 mb-2">Search Posts</label>
        <%= f.text_field :search,
            value: params[:search],
            placeholder: "Search post content...",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Filters Row -->
      <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <!-- Post Type Filter -->
        <div>
          <label for="post_type" class="block text-sm font-medium text-gray-700 mb-2">Post Type</label>
          <%= f.select :post_type,
              options_for_select([
                ['All Types', 'all'],
                ['Link', 'link'],
                ['Image', 'image'],
                ['Text', 'text'],
                ['Video', 'video']
              ], params[:post_type] || 'all'),
              {},
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Date From -->
        <div>
          <label for="date_from" class="block text-sm font-medium text-gray-700 mb-2">From Date</label>
          <%= f.date_field :date_from,
              value: params[:date_from],
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Date To -->
        <div>
          <label for="date_to" class="block text-sm font-medium text-gray-700 mb-2">To Date</label>
          <%= f.date_field :date_to,
              value: params[:date_to],
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Minimum Interactions -->
        <div>
          <label for="min_interactions" class="block text-sm font-medium text-gray-700 mb-2">Min. Interactions</label>
          <%= f.number_field :min_interactions,
              value: params[:min_interactions],
              placeholder: "e.g. 100",
              min: 0,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Minimum Performance -->
        <div>
          <label for="min_performance" class="block text-sm font-medium text-gray-700 mb-2">
            Min. Performance
            <span class="text-xs text-gray-500">(% score)</span>
          </label>
          <%= f.number_field :min_performance,
              value: params[:min_performance],
              placeholder: "e.g. 150",
              min: 0,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Preserve sort parameters -->
      <%= f.hidden_field :sort, value: params[:sort] %>
      <%= f.hidden_field :direction, value: params[:direction] %>

      <!-- Action Buttons -->
      <div class="flex gap-3">
        <%= f.submit "Apply Filters", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition duration-200" %>
        <%= link_to "Clear Filters", posts_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-6 rounded-lg transition duration-200" %>
      </div>
    <% end %>
  </div>

  <!-- Posts Table -->
  <%= turbo_frame_tag "posts_table" do %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to posts_path(sort: 'posted_at', direction: (params[:sort] == 'posted_at' && params[:direction] == 'desc') ? 'asc' : 'desc', search: params[:search], post_type: params[:post_type], date_from: params[:date_from], date_to: params[:date_to], min_interactions: params[:min_interactions], min_performance: params[:min_performance]), class: "flex items-center hover:text-gray-700", data: { turbo_frame: "posts_table" } do %>
                Date
                <% if params[:sort] == 'posted_at' %>
                  <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                    <% if params[:direction] == 'asc' %>
                      <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
                    <% else %>
                      <path d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"/>
                    <% end %>
                  </svg>
                <% end %>
              <% end %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Content
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Type
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to posts_path(sort: 'likes', direction: (params[:sort] == 'likes' && params[:direction] == 'desc') ? 'asc' : 'desc', search: params[:search], post_type: params[:post_type], date_from: params[:date_from], date_to: params[:date_to], min_interactions: params[:min_interactions], min_performance: params[:min_performance]), class: "flex items-center hover:text-gray-700", data: { turbo_frame: "posts_table" } do %>
                Likes
                <% if params[:sort] == 'likes' %>
                  <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                    <% if params[:direction] == 'asc' %>
                      <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
                    <% else %>
                      <path d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"/>
                    <% end %>
                  </svg>
                <% end %>
              <% end %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to posts_path(sort: 'replies', direction: (params[:sort] == 'replies' && params[:direction] == 'desc') ? 'asc' : 'desc', search: params[:search], post_type: params[:post_type], date_from: params[:date_from], date_to: params[:date_to], min_interactions: params[:min_interactions], min_performance: params[:min_performance]), class: "flex items-center hover:text-gray-700", data: { turbo_frame: "posts_table" } do %>
                Replies
                <% if params[:sort] == 'replies' %>
                  <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                    <% if params[:direction] == 'asc' %>
                      <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
                    <% else %>
                      <path d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"/>
                    <% end %>
                  </svg>
                <% end %>
              <% end %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to posts_path(sort: 'reposts', direction: (params[:sort] == 'reposts' && params[:direction] == 'desc') ? 'asc' : 'desc', search: params[:search], post_type: params[:post_type], date_from: params[:date_from], date_to: params[:date_to], min_interactions: params[:min_interactions], min_performance: params[:min_performance]), class: "flex items-center hover:text-gray-700", data: { turbo_frame: "posts_table" } do %>
                Reposts
                <% if params[:sort] == 'reposts' %>
                  <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                    <% if params[:direction] == 'asc' %>
                      <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
                    <% else %>
                      <path d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"/>
                    <% end %>
                  </svg>
                <% end %>
              <% end %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to posts_path(sort: 'total_interactions', direction: (params[:sort] == 'total_interactions' && params[:direction] == 'desc') ? 'asc' : 'desc', search: params[:search], post_type: params[:post_type], date_from: params[:date_from], date_to: params[:date_to], min_interactions: params[:min_interactions], min_performance: params[:min_performance]), class: "flex items-center hover:text-gray-700", data: { turbo_frame: "posts_table" } do %>
                Total
                <% if params[:sort] == 'total_interactions' %>
                  <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                    <% if params[:direction] == 'asc' %>
                      <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
                    <% else %>
                      <path d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"/>
                    <% end %>
                  </svg>
                <% end %>
              <% end %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to posts_path(sort: 'overperformance', direction: (params[:sort] == 'overperformance' && params[:direction] == 'desc') ? 'asc' : 'desc', search: params[:search], post_type: params[:post_type], date_from: params[:date_from], date_to: params[:date_to], min_interactions: params[:min_interactions], min_performance: params[:min_performance]), class: "flex items-center hover:text-gray-700", data: { turbo_frame: "posts_table" } do %>
                Performance
                <% if params[:sort] == 'overperformance' %>
                  <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                    <% if params[:direction] == 'asc' %>
                      <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/>
                    <% else %>
                      <path d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"/>
                    <% end %>
                  </svg>
                <% end %>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @posts.any? %>
            <% @posts.each do |post| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if post.platform_url %>
                  <%= link_to post.platform_url, target: "_blank", rel: "noopener noreferrer", class: "text-blue-600 hover:text-blue-800 hover:underline" do %>
                    <%= post.posted_at.strftime('%b %d, %Y') %>
                    <br>
                    <span class="text-xs text-gray-400">
                      <%= post.posted_at.strftime('%H:%M') %>
                    </span>
                  <% end %>
                <% else %>
                  <%= post.posted_at.strftime('%b %d, %Y') %>
                  <br>
                  <span class="text-xs text-gray-400">
                    <%= post.posted_at.strftime('%H:%M') %>
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">
                <div class="max-w-md">
                  <%= post.truncated_content(100) %>
                  <% if post.external_url %>
                    <br>
                    <%= link_to post.external_url, post.external_url, target: "_blank", class: "text-blue-600 hover:text-blue-800 text-xs" %>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                  <%= case post.post_type
                      when 'link' then 'bg-blue-100 text-blue-800'
                      when 'image' then 'bg-purple-100 text-purple-800'
                      when 'video' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= post.post_type %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= post.latest_metrics&.likes || 0 %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= post.latest_metrics&.replies || 0 %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= post.latest_metrics&.reposts || 0 %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= post.latest_total_interactions %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% if post.overperformance_score_cache.present? %>
                  <% score = post.overperformance_score_cache %>
                  <span class="px-2 py-1 rounded-full font-semibold
                    <%= if score > 150
                          'bg-green-100 text-green-800'
                        elsif score > 100
                          'bg-blue-100 text-blue-800'
                        elsif score > 50
                          'bg-yellow-100 text-yellow-800'
                        else
                          'bg-red-100 text-red-800'
                        end %>">
                    <%= score.round(1) %>%
                  </span>
                <% else %>
                  <span class="text-gray-400 text-xs">-</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="px-6 py-8 text-center text-gray-500">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
              </svg>
              <p class="mt-2 text-lg">No posts found</p>
              <p class="mt-1 text-sm">Click "Sync Now" to fetch posts from Bluesky</p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @posts.any? %>
    <div class="mt-6">
      <%= paginate @posts, params: { search: params[:search], post_type: params[:post_type], date_from: params[:date_from], date_to: params[:date_to], min_interactions: params[:min_interactions], min_performance: params[:min_performance], sort: params[:sort], direction: params[:direction] } %>
    </div>
  <% end %>
  <% end %> <%# End turbo_frame_tag %>
</div>
