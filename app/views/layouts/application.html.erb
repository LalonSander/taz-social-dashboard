<!DOCTYPE html>
<html>
  <head>
    <title>Social Media Analytics - taz.de</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
      /* Custom styles */
      body { background-color: #f8f9fa; }
      .sidebar {
        position: fixed;
        top: 56px;
        bottom: 0;
        left: 0;
        width: 280px;
        overflow-y: auto;
        background: white;
        border-right: 1px solid #dee2e6;
        padding: 1.5rem;
      }
      .main-content {
        margin-left: 280px;
        padding: 0;
      }
      @media (max-width: 991px) {
        .sidebar { display: none; }
        .main-content { margin-left: 0; }
      }
      .table-container {
        background: white;
        overflow-x: auto;
      }
      .navbar { box-shadow: 0 2px 4px rgba(0,0,0,.08); }
      .sparkline { width: 80px; height: 25px; }
    </style>
  </head>

  <body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">
          Social Media Analytics
          <span class="badge bg-primary ms-2">taz.de</span>
        </span>

        <div class="d-flex align-items-center">
          <% if user_signed_in? %>
            <% if defined?(@last_sync) && @last_sync %>
              <span class="text-muted small me-3 d-none d-sm-inline">
                Last synced: <%= time_ago_in_words(@last_sync) %> ago
              </span>
            <% end %>

            <% if defined?(@last_sync) %>
              <%= button_to sync_posts_path, method: :post, class: "btn btn-primary btn-sm me-2", data: { turbo: false } do %>
                <i class="bi bi-arrow-repeat"></i>
                <span class="d-none d-sm-inline ms-1">Sync</span>
              <% end %>
            <% end %>

            <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary btn-sm" %>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if notice || alert %>
      <div style="margin-top: 56px;">
        <div class="container-fluid">
          <% if notice %>
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
              <i class="bi bi-check-circle me-2"></i>
              <%= notice %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>

          <% if alert %>
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
              <i class="bi bi-exclamation-circle me-2"></i>
              <%= alert %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <main style="padding-top: 56px;">
      <%= yield %>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
